<p id="notice"><%= notice %></p>

<h1>Listing Saldos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saldos.each do |saldo| %>
      <tr>
        <td><%= saldo.fecha %></td>
        <td><%= saldo.monto %></td>
        <td><%= link_to 'Show', saldo %></td>
        <td><%= link_to 'Edit', edit_saldo_path(saldo) %></td>
        <td><%= link_to 'Destroy', saldo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saldo', new_saldo_path %>
